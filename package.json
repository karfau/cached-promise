{
  "name": "cached-promise",
  "version": "0.2.4",
  "description": "subscribe to changes to the state of promises over time and cache the result of async calls",
  "main": "src/index.ts",
  "scripts": {
    "dev": "deno test --watch",
    "test:bun": "bun test",
    "test:deno": "deno test --coverage 'src/**/*.test.ts'",
    "test:node": "node --test 'src/**/*.test.ts'",
    "test": "pnpm run --aggregate-output /^test:.*/",
    "checks": "pnpm types && pnpm lint && pnpm knip",
    "types:deno": "(set -x; deno check '**/*.ts')",
    "types:node": "tsc --listFiles",
    "types": "pnpm run --aggregate-output /^types:.*/",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "knip": "knip && knip --production",
    "lint": "eslint",
    "lint:fix": "eslint --fix",
    "prepare": "husky",
    "pub": "deno publish --config jsr.jsonc --no-check",
    "pubdry": "pnpm pub --dry-run --allow-dirty"
  },
  "keywords": [],
  "author": "Christian Bewernitz",
  "license": "MIT",
  "dependencies": {
    "rxjs-interop": "2.0.0"
  },
  "devDependencies": {
    "@assertive-ts/core": "2.1.0",
    "@assertive-ts/sinon": "1.0.0",
    "@eslint/js": "9.37.0",
    "@std/testing": "npm:@jsr/std__testing@1.0.16",
    "@types/node": "22.18.8",
    "@types/sinon": "17.0.4",
    "eslint": "9.37.0",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "husky": "9.1.7",
    "jsr": "0.13.5",
    "knip": "5.64.2",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "release-please": "17.1.3",
    "rxjs": "7.8.2",
    "sinon": "21.0.0",
    "typescript": "5.9.3",
    "typescript-eslint": "8.45.0"
  },
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*": "prettier --ignore-unknown --write"
  },
  "type": "module",
  "packageManager": "pnpm@10.18.1+sha512.77a884a165cbba2d8d1c19e3b4880eee6d2fcabd0d879121e282196b80042351d5eb3ca0935fa599da1dc51265cc68816ad2bddd2a2de5ea9fdf92adbec7cd34",
  "wallaby": {
    "autoDetect": [
      "node:test"
    ]
  },
  "pnpm": {
    "overrides": {
      "lodash.get": "./test/lodash.get"
    },
    "onlyBuiltDependencies": [
      "esbuild",
      "unrs-resolver"
    ]
  }
}
